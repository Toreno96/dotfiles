#!/bin/sh

ICON='Ôçõ'
OUTDATED="$(checkupdates; checkupdates-aur)"
if [ -n "${OUTDATED}" ]; then
    OUTDATED_COUNT=$(echo "${OUTDATED}" | wc -l)
else
    OUTDATED_COUNT=0
fi
ALL_COUNT=$(pacman -Q | wc -l)

echo "<tool>${OUTDATED}</tool>"
echo "<txt><span fgcolor='#d3dae3'>${ICON} ${OUTDATED_COUNT}/${ALL_COUNT}</span></txt>"
