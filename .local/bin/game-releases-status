#!/usr/bin/env python3

import datetime

ICON = 'ï„›'
RELEASE_DATES = {
    'dmc5': datetime.date(2019, 3, 8),
}
OUTPUT = "<tool></tool><txt><span fgcolor='#d3dae3'>{} ".format(ICON)
OUTPUT += ' '.join([
    '{}:{}'.format(k, (v - datetime.date.today()).days)
    for k, v in RELEASE_DATES.items()
])
OUTPUT += "</span></txt>"

print(OUTPUT)
