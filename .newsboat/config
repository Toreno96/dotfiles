auto-reload yes
reload-time 15
datetime-format "%F %T"

browser "${BROWSER} %u >/dev/null 2>/dev/null"
notify-format "%n new article(s)"
notify-program newsboat-notifier

bind-key j next
bind-key k prev
bind-key J next-feed
bind-key K prev-feed
bind-key j down article
bind-key k up article
bind-key J next article
bind-key K prev article

color info blue black standout
color listnormal white black
color listnormal_unread yellow black
color listfocus white black bold
color listfocus_unread yellow black bold
